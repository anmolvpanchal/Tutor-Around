<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bottomnavFragments.FragmentEvents">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        android:elevation="10dp"
        app:titleTextColor="@color/logodarkblue"
        app:title="Events" />

    <android.support.design.widget.TabLayout
        android:id="@+id/eventstabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/logodarkblue"
        app:tabTextColor="@color/colorwhite"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/eventsviewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/eventstabLayout" />


</LinearLayout>