<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    tools:context=".activity.ResetPassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/reset_password_password_TextInputLayout"
                android:scaleType="fitCenter"
                android:src="@drawable/tutor_around_icon" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/reset_password_password_TextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/reset_password_confirmpassword_TextInputLayout"
                android:layout_below="@id/logo"
                android:layout_centerInParent="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="15dp"
                android:textColorHint="@color/logolightblue"
                app:boxStrokeColor="@color/logodarkblue"
                app:boxStrokeWidth="3dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/logodarkblue">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/reset_password_password_TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textWebEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/colorblack" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/reset_password_confirmpassword_TextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_centerInParent="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColorHint="@color/logolightblue"
                app:boxStrokeColor="@color/logodarkblue"
                app:boxStrokeWidth="3dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/logodarkblue">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/reset_password_confirmpassword_TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:inputType="textWebEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/colorblack" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/reset_password_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reset_password_confirmpassword_TextInputLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonstyleithgradient"
                android:padding="8dp"
                android:text="Change Password"
                android:textColor="@color/colorwhite"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>