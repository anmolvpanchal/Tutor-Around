<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    tools:context=".activity.ForgetPassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tutor_around_icon"
                android:scaleType="fitCenter"
                android:layout_above="@id/forgetemailIDTextInputLayout"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/forgetemailIDTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_centerInParent="true"
        app:boxStrokeWidth="3dp"
        android:textColorHint="@color/logolightblue"
        app:boxStrokeColor="@color/logodarkblue">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/forgetuserIDTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/emaillogo"
            android:hint="Email"
            android:maxLines="1"
            android:textColor="@color/colorblack"
            android:inputType="textWebEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/generateotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorwhite"
        android:background="@drawable/buttonstyleithgradient"
        android:padding="8dp"
        android:textSize="20dp"
        android:textStyle="bold"

        android:text="generate otp"

        android:layout_below="@+id/forgetemailIDTextInputLayout"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>