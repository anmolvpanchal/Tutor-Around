<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UpdatePassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/uodate_password_rootlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/update_Password_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/tutor_around_icon" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/update_Password_old_TextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_Password_image"
                android:layout_margin="10dp"
                android:textColorHint="@color/logolightblue"
                app:boxStrokeColor="@color/logodarkblue"
                app:boxStrokeWidth="3dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/logodarkblue">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/update_Password_old_TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Old Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/colorblack" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/update_Password_new_TextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_Password_old_TextInputLayout"
                android:layout_margin="10dp"
                android:textColorHint="@color/logolightblue"
                app:boxStrokeColor="@color/logodarkblue"
                app:boxStrokeWidth="3dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/logodarkblue">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/update_Password_new_TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/colorblack" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/update_Password_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_Password_new_TextInputLayout"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:background="@drawable/buttonstyleithgradient"
                android:padding="7dp"
                android:text="Submit"
                android:textColor="@color/colorwhite"
                android:textSize="20dp" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>