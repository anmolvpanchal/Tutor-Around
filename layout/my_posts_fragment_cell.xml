<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myposts_toplayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/LightGrey"
    android:padding="2dp">


    <android.support.v7.widget.CardView
        android:id="@+id/mypost_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:backgroundTint="@color/colorwhite"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:id="@+id/mypost_innerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">


            <TextView
                android:id="@+id/mypost_subjectname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject Name"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorwhite"
                android:background="@color/logodarkblue"
                android:textSize="30dp"
                android:textStyle="bold" />


            <View
                android:id="@+id/mypost_view"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@id/mypost_subjectname"
                android:layout_margin="2dp"
                android:background="@color/logodarkpink" />

            <TextView
                android:id="@+id/mypost_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mypost_view"
                android:layout_marginTop="10dp"
                android:text="Date"
                android:textColor="@color/logolightpink"
                android:textSize="20dp"
                 />

            <TextView
                android:id="@+id/mypost_actual_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mypost_date"
                android:layout_marginTop="15dp"
                android:text="00/00/00"
                android:textColor="@color/colorblack"
                android:textSize="25dp"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/mypost_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mypost_view"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:text="Time"
                android:textColor="@color/logodarkblue"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/mypost_actual_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mypost_time"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:text="00:00"
                android:textColor="@color/colorblack"
                android:textSize="25dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/mypost_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/logodarkpink"
                android:textSize="20dp"
                android:layout_below="@id/mypost_actual_date"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/mypost_actual_description"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/mypost_description"
                android:layout_marginTop="20dp"
                android:text="Description text"
                android:textColor="@color/colorblack"
                android:textSize="17dp"
                android:textStyle="bold" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>