<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SessionActivity">

    <TextView
        android:id="@+id/sesion_timer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="140dp"
        android:padding="15dp"
        android:textColor="@color/colorwhite"
        android:background="@color/logodarkblue"/>

    <Button
        android:id="@+id/sesion_noshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sesion_timer_text"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="no show"
        android:textSize="20dp"
        android:padding="5dp"
        android:background="@drawable/button_with_shadow"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorwhite"/>

    <Button
        android:id="@+id/sesion_start_sessio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sesion_noshow"
        android:layout_margin="20dp"
        android:text="start session"
        android:textSize="20dp"
        android:padding="5dp"
        android:background="@drawable/button_with_shadow"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorwhite"/>

    <Button
        android:id="@+id/sesion_complete_sessio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sesion_start_sessio"
        android:layout_margin="20dp"
        android:text="end session"
        android:textSize="20dp"
        android:padding="5dp"
        android:background="@drawable/button_with_shadow"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorwhite"/>



</RelativeLayout>