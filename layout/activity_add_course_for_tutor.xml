<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddCourseForTutor"
    android:background="@color/colorwhite">

    <android.support.v7.widget.Toolbar
        android:id="@+id/addsubjects_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorwhite"
        android:elevation="10dp"
        app:title="Add Subjects"
        app:titleTextColor="@color/logodarkblue" />

    <TextView
        android:id="@+id/addsubjects_select_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the subject you want to add"
        android:textColor="@color/colorblack"
        android:layout_below="@id/addsubjects_toolbar"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="serif"/>
    <Spinner
        android:id="@+id/addsubjects_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/addsubjects_select_text"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/addsubjects_TextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addsubjects_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:textColorHint="@color/logolightblue"
        app:boxStrokeColor="@color/logodarkblue"
        app:boxStrokeWidth="3dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/addsubjects_TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Code Of Subject"
            android:inputType="textWebEmailAddress"
            android:maxLines="1"
            android:textColor="@color/colorblack" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/addsubjects_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addsubjects_TextInputLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonstyleithgradient_reverse"
        android:padding="8dp"
        android:text="Add to skills"
        android:textColor="@color/colorwhite"
        android:textSize="20dp"
        android:textStyle="bold" />






</RelativeLayout>