<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myschedule_toplayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/LightGrey"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/myschedule_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:backgroundTint="@color/colorwhite"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:id="@+id/myschedule_innerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">


            <TextView
                android:id="@+id/myschedule_subjectname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject Name"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textAllCaps="true"
                android:textColor="@color/colorwhite"
                android:background="@color/logodarkpink"/>


            <View
                android:id="@+id/myschedule_view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/LightGrey"
                android:layout_below="@id/myschedule_subjectname"
                android:layout_margin="2dp"
                />

            <TextView
                android:id="@+id/myschedule_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/logodarkblue"
                android:layout_below="@id/myschedule_view"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/myschedule_actual_date"
                android:text="0000/00/00"
                android:textSize="20dp"
                android:textColor="@color/colorblack"
                android:layout_below="@id/myschedule_date"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/myschedule_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/logolightpink"
                android:layout_below="@id/myschedule_view"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/myschedule_actual_time"
                android:text="00:00"
                android:textSize="20dp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorblack"
                android:layout_below="@id/myschedule_date"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/myschedule_personname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Persons Name"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textAllCaps="true"
                android:textColor="@color/colorblack"
                android:layout_below="@id/myschedule_actual_date"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/myschedule_personrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rating"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/logolightblue"
                android:layout_below="@id/myschedule_actual_time"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>