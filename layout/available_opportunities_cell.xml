<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/available_opp_toplayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/LightGrey"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/available_opp_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:backgroundTint="@color/colorwhite"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:id="@+id/available_opp_innerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">


            <TextView
                android:id="@+id/available_opp_subjectname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject Name"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:background="@color/logodarkblue"
                android:textColor="@color/colorwhite"
                android:textSize="30dp"
                android:textStyle="bold" />


            <View
                android:id="@+id/available_opp_view"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@id/available_opp_subjectname"
                android:layout_margin="2dp"
                android:background="@color/logodarkpink" />

            <TextView
                android:id="@+id/available_opp_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/available_opp_view"
                android:layout_marginTop="10dp"
                android:text="Date"
                android:textColor="@color/logolightpink"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/available_opp_actual_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/available_opp_date"
                android:layout_marginTop="10dp"
                android:text="0000/00/00"
                android:textColor="@color/colorblack"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/available_opp_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/available_opp_view"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:text="Time"
                android:textColor="@color/logodarkblue"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/available_opp_actual_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/available_opp_time"
                android:layout_marginTop="10dp"
                android:text="00:00"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorblack"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/available_opp_amounttag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/available_opp_actual_time"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:text="Amount"
                android:textColor="@color/logodarkblue"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/available_opp_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/available_opp_amounttag"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:text="RS"
                android:textColor="@color/colorblack"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/available_opp_description_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/logolightpink"
                android:textSize="25dp"
                android:layout_above="@id/available_opp_description"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/available_opp_description"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/available_opp_amount"
                android:layout_marginTop="15dp"
                android:text="Description text"
                android:textColor="@color/colorblack"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/counteroffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/available_opp_description"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttonstyleithgradient"
                android:text="Counter Offer"
                android:textColor="@color/colorwhite"
                android:textSize="25dp"
                />



        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>