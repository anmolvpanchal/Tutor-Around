<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/splashbaselayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorblack"
    tools:context=".activity.SplashScreen">

    <LinearLayout
        android:id="@+id/splashbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:id="@+id/splashbackgroundlightpink"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.92"
            android:background="@color/logolightpink"/>

        <View
            android:id="@+id/splashbackgroundlighblue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/logolightblue"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tutor_around_icon"
        android:layout_centerInParent="true"
        />
</RelativeLayout>