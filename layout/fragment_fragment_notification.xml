<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bottomnavFragments.FragmentNotification">

    <android.support.v7.widget.Toolbar
        android:id="@+id/notification_frag_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        app:title="Notifications"
        app:titleTextColor="@color/logodarkblue"
        android:elevation="9dp"
        />


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/notification_frag_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/notification_frag_toolbar"
        >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/notification_frag_recyclerview"
        android:layout_below="@+id/notification_frag_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>